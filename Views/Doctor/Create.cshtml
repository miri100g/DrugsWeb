                                    </div>
                                    @Html.ValidationMessageFor(model => model.Specialty, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Licensing, htmlAttributes: new { @class = "control-label col-md-6" })
