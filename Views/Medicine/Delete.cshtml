                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.MImage)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.MImage)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.GenericName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.GenericName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.ActiveIngredients)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ActiveIngredients)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Properties)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Properties)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group" style="position:relative; left:300px;">
                        <input type="submit" value="Delete Medicine" class="btn btn-primary tm-btn-submit rounded-0" />
                        @Html.ActionLink("Back to List", "Index", "Medicine", new { @class = "btn btn-primary tm-btn-submit rounded-0" })
                    </div>
                }
            </div>
        </section>
    </div>
</div>
@if (ViewBag.Message != null)
{
    <script type="text/javascript">

            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>
}