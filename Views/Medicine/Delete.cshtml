    <div>
        <section class="row tm-contact-row" style="background-color:white; position:relative; left:570px; top:-150px; width:840px; opacity:0.8;">
            <div class="col-lg-12 tm-contact-col-left">
                <dl class="d-lg-inline" style="position:relative; left:100px; top:-20px; width:3000px; color:black;">
                    <dt>
                        @Html.DisplayNameFor(model => model.Ndc)
                    </dt>

                    <dd>
